<div class="row">
  <div class="col-lg-12">
    <h1>Ingresar venta</h1>
    <%= form_with model: @sale do |f| %>
      <div class="form-group">
        <%= f.label :cod %>
        <%= f.text_field :cod, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :detail %>
        <%= f.text_area :detail, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :category %>
        <%= f.text_field :category, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :value %>
        <%= f.number_field :value, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :discount %>
        <%= f.number_field :discount, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :tax %>
        <%= f.check_box :tax %>
      </div>
      <%= f.submit 'Ingresar', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
